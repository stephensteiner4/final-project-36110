<div>
  <div>
    <h1>
      List of all production plans
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new production plan
    </h2>

    <form action="/insert_production_plan" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create production plan
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_production_plans.each do |a_production_plan| %>
      <tr>
        <td>
          <%= a_production_plan.id %>
        </td>

        <td>
          <%= a_production_plan.description %>
        </td>

        <td>
          <%= a_production_plan.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_production_plan.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_production_plan.updated_at) %> ago
        </td>

        <td>
          <a href="/production_plans/<%= a_production_plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
