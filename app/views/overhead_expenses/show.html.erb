<div>
  <div>
    <h1>
      Fixed Cost: <%= @the_overhead_expense.category %>
    </h1>


    
      <h2>
        Plan: <%= @the_overhead_expense.plan.name %>
      </h2>

      <div>
        Created at: <%= time_ago_in_words(@the_overhead_expense.created_at) %> ago
      </div>

      <div>
        Updated at: <%= time_ago_in_words(@the_overhead_expense.updated_at) %> ago
      </div>

<br>

  <div style="max-width: 300px;">
    <form action="/modify_overhead_expense/<%= @the_overhead_expense.id %>"  method="post" >
      <div>
        <label for="category_box">
          Category
        </label>

        <input class="form-control border-dark" type="text" id="category_box" name="query_category" value="<%= @the_overhead_expense.category %>">
      </div>

      <div >
        <label for="total_cost_box">
          Total cost
        </label>

        <input class="form-control border-dark" type="text" id="total_cost_box" name="query_total_cost" value="<%= @the_overhead_expense.total_cost %>">
      </div>

      <br>

      <button class="btn btn-outline-danger btn-sm">
        Update
      </button>
    </form>
  </div>

</div>

<hr>

    <div>
      <div>
        <a href="/production_plans/<%= @the_overhead_expense.plan_id %>">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_overhead_expense/<%= @the_overhead_expense.id %>">
          Delete overhead expense
        </a>
      </div>
    </div>
